        </Rule>
        <Rule groupRelation="and">
          <Image condition="contains all">C:\Program Files;\Git\mingw64\libexec\git-core\git.exe</Image>
          <PipeName condition="begin with">\winansi</PipeName>
        </Rule>
      </PipeEvent>
    </RuleGroup>
